<h1>Tous Nos Pokémon</h1>
<h2>  <%= current_user.email %> euro</h2>
<p>portefeuille :  <%= current_user.balance %> euro</p>
<ul>
  <% @pokemons.each do |pokemon| %>
    <% if pokemon.user_id != current_user.id %>
      <li>
        <strong>Nom :</strong> <%= pokemon.name %><br>
        <strong>Image :</strong> <%= image_tag(pokemon.imagepath, alt: pokemon.name, width: 100) %><br>
        <strong>Prix :</strong> <%= pokemon.price %> $<br>
        <%= link_to 'Voir ce Pokémon', pokemon_path(pokemon) %><br>
      </li>
    <% end %>
  <% end %>
</ul>

